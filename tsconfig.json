{
    "compilerOptions": {
        "allowJs": false,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "declaration": true,
        "forceConsistentCasingInFileNames": true,
        "isolatedModules": true,
        "module": "commonjs",
        "moduleResolution": "Node",
        "outDir": "./dist",
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "strict": true,
        "target": "es2017"
    },
    "include": [
        "./src"
    ]
}